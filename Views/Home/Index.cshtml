    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
       // alert("Hello App") 

        function getData() { 

             var serviceURL = '/Api/Authentication';
             let username = document.getElementById("username").value;
             let idnumber = document.getElementById("idnumber").value;
             let studData = { "StudentName": username, "StudentRSAIDnumber": idnumber };

             $.ajax({
                 type: "POST",
                 url: serviceURL,
                 data: JSON.stringify(studData),
                contentType: "application/json",
                dataType: "json",
                success: successFunc,
                error: errorFunc
            });

            function successFunc(data, status) {
                //console.log(data);
                if (data == studData.StudentRSAIDnumber) {

                    alert("User logged in successfully");
                    window.location = "https://localhost:44362/Students/Index";
                    window.location.href = "https://localhost:44362/Students/Index";
                    self.location = "https://localhost:44362/Students/Index";
                    self.reload();
                    window.location.reload();
                    $get('https://localhost:44362/Students/Index', function (data, status) {
                        //alert("status");
                    });
                } else {
                    alert("User not found");
                }
            }

            function errorFunc(error) {
                alert("User not found");
                //alert('error ' + JSON.stringify(error));
             }
        }

    </script>

